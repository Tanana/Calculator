<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_height="match_parent"
android:layout_width="match_parent"
tools:context="com.qoobico.calculator.MainActivity"
android:background="#4f20f9">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calculator"
    android:textSize="45dp"
    android:id="@+id/textView"
    android:textAlignment="center"
    android:textColor="#FFFFFF"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:layout_x="91dp"
    android:layout_y="20dp" />



<EditText
    android:layout_width="275dp"
    android:layout_height="55dp"
    android:id="@+id/etLoginName"
    android:drawableLeft="@drawable/user"
    android:singleLine="true"
    android:textColor="#ffffff"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_x="55dp"
    android:layout_y="75dp" /> />

<EditText
    android:layout_width="275dp"
    android:layout_height="55dp"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/etPass"
    android:drawableLeft="@drawable/locked"
    android:singleLine="true"
    android:textColor="#ffffff"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/etLoginName"
    android:layout_centerHorizontal="true"
    android:layout_x="55dp"
    android:layout_y="125dp" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Forgotten Password?"
    android:id="@+id/tvForgPass"
    android:textColor="#ffffff"
    android:layout_gravity="right"
    android:layout_below="@+id/etPass"
    android:layout_alignRight="@+id/etPass"
    android:layout_alignEnd="@+id/etPass"
    android:layout_x="210dp"
    android:layout_y="194dp" />


<Button
    android:id="@+id/btnLog"
    android:layout_width="275dp"
    android:layout_height="55dp"
    android:text="Login"
    android:textColor="#FFFFFF"
    android:background="#F404AC"
    android:layout_gravity="center_horizontal"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_x="55dp"
    android:layout_y="242dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Registration"
    android:textColor="#ffffff"
    android:id="@+id/tvRegisterLink"
    android:layout_gravity="center_horizontal"
    android:textSize="15dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_x="155dp"
    android:layout_y="460dp" />

