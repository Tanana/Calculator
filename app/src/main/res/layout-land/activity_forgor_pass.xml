<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f20f9">
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:text="Please, enter your email to recover your password"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/edEmail"
        android:layout_alignLeft="@+id/edEmail"
        android:layout_alignStart="@+id/edEmail" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/mail"
        android:singleLine="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:text="SEND"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:textColor="#FFFFFF"
        android:background="#F404AC"
        android:layout_margin="25dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>